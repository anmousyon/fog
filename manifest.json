{
  "manifest_version": 2,

  "name": "violet",
  "description": "Add torrent to download list",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "violet"
  },
  
  "background": {
    "scripts": [
      "background.js",
      "jquery.js",
      "popup.js"
    ]
  },

  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "http://imdb.com/*",
    "http://goodallserver.us-east-1.elasticbeanstalk.com/*"
  ]
}